<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                   xmlns:tools="http://schemas.android.com/tools"
                                   android:id="@+id/mpsdkLowResToolbar"
                                   android:layout_width="match_parent"
                                   android:layout_height="@dimen/px_toolbar_height"
                                   android:background="@color/px_background"
                                   android:minHeight="@dimen/px_toolbar_height"
                                   android:theme="@style/ToolbarTheme"
                                   android:visibility="gone"
                                   app:popupTheme="@style/Theme.MercadoPagoTheme.NoActionBar">

    <com.mercadopago.android.px.internal.view.MPTextView
        android:id="@+id/mpsdkTitle"
        style="@style/px_toolbar_text_medium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start|center_vertical"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        tools:text="Tarjeta de crÃ©dito"/>

    <com.mercadopago.android.px.internal.view.MPTextView
        android:id="@+id/mpsdkBankDealsText"
        style="@style/px_toolbar_text_xx_small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|center_vertical"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:visibility="gone"
        tools:text="Ver Promociones"/>

    <com.mercadopago.android.px.internal.view.MPTextView
        android:id="@+id/mpsdkTimerTextView"
        style="@style/px_toolbar_text_small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|center_vertical"
        android:layout_marginEnd="13dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="17dp"
        android:background="@drawable/px_title_toolbar"
        android:visibility="gone"
        app:customStyle="monospace"/>

</androidx.appcompat.widget.Toolbar>