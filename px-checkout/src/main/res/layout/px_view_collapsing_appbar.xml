<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.appbar.AppBarLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                            xmlns:app="http://schemas.android.com/apk/res-auto"
                                            android:layout_width="match_parent"
                                            android:layout_height="@dimen/px_appbar_height"
                                            android:fitsSystemWindows="true"
                                            android:theme="@style/ThemeOverlay.AppCompat.Dark"
                                            app:layout_behavior="com.mercadopago.android.px.internal.view.FixAppBarLayoutBehavior">

    <com.google.android.material.appbar.CollapsingToolbarLayout
        android:id="@+id/collapsing_toolbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/px_review_background"
        android:fitsSystemWindows="true"
        app:collapsedTitleGravity="start"
        app:collapsedTitleTextAppearance="@style/px_collapsing_review_toolbar_text_medium"
        app:contentScrim="@color/px_review_background"
        app:expandedTitleGravity="center_horizontal"
        app:expandedTitleMarginBottom="25dp"
        app:expandedTitleMarginTop="45dp"
        app:expandedTitleTextAppearance="@style/px_collapsing_review_toolbar_text_large"
        app:layout_scrollFlags="scroll|exitUntilCollapsed"
        app:toolbarId="@+id/toolbar">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/px_toolbar_height"
            android:background="@color/px_review_background"
            android:minHeight="?attr/actionBarSize"
            android:theme="@style/ReviewToolbarTheme"
            app:layout_collapseMode="pin"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"/>

    </com.google.android.material.appbar.CollapsingToolbarLayout>
</com.google.android.material.appbar.AppBarLayout>