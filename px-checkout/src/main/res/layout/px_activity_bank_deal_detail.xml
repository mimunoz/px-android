<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/px_light_gray"
              android:orientation="vertical"
              tools:context=".internal.features.bank_deal_detail.BankDealDetailActivity">

    <include layout="@layout/px_toolbar_primary_with_title"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/px_white"
                android:orientation="vertical"
                android:paddingBottom="@dimen/px_xl_margin"
                android:paddingEnd="@dimen/px_s_margin"
                android:paddingLeft="@dimen/px_s_margin"
                android:paddingRight="@dimen/px_s_margin"
                android:paddingStart="@dimen/px_s_margin"
                android:paddingTop="@dimen/px_xl_margin">

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:minHeight="@dimen/px_s_height">

                    <ImageView
                        android:id="@+id/logo"
                        android:layout_width="@dimen/px_promotion_logo_width"
                        android:layout_height="@dimen/px_s_height"
                        android:layout_gravity="center"/>

                    <com.mercadopago.android.px.internal.view.MPTextView
                        android:id="@+id/logo_name"
                        style="@style/DealsLogoName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        tools:text="MercadoPago + Banco patagonia"/>

                </FrameLayout>

                <com.mercadopago.android.px.internal.view.MPTextView
                    android:id="@+id/title"
                    style="@style/DealsDetailTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/px_s_margin"
                    android:gravity="center"
                    tools:text="6 cuotas sin interes"/>

                <com.mercadopago.android.px.internal.view.MPTextView
                    android:id="@+id/exp_date"
                    style="@style/DealsDescription"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    tools:text="Hasta 22/3/2018"/>

            </LinearLayout>

            <com.mercadopago.android.px.internal.view.MPTextView
                android:id="@+id/legals"
                style="@style/DealsLegal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start|left"
                android:layout_margin="@dimen/px_s_margin"

                tools:text="legals text"/>

        </LinearLayout>


    </ScrollView>

</LinearLayout>